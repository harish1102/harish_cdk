#variable-template.yml

parameters:
  - name: buildConfiguration
    default: 'Release'

steps:
  - script: echo "Setting build configuration to ${{ parameters.buildConfiguration }}"
    displayName: 'Set Configuration'
  - script: echo "Using environment from variable group: $(environmentName)"
    displayName: 'Display Environment'
  - script: echo "Deployment region is $(deployRegion)"
    displayName: 'Display Region'
---------
#azure-pipeline.yml
trigger:
- main

pool:
  vmImage: 'ubuntu-latest'

variables:
- group: ProdVars  # Linking the variable group

jobs:
- job: UseTemplatesAndVariables
  displayName: 'Demonstrate Templates and Variable Groups'

  steps:
  - template: variable-template.yml  # Using the template
    parameters:
      buildConfiguration: 'Debug'

  - script: echo "Global variable usage: Environment is $(environmentName), Region is $(deployRegion)"
    displayName: 'Use Global Variables'
=========


